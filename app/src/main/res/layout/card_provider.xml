<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_columnWeight="1"
    android:layout_rowWeight="5"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    tools:context="com.example.myapplication.Activitys.MainActivity"
    android:layout_margin="12dp">

    <FrameLayout
        android:background="@drawable/bg_button"
        android:layout_width="4dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvReserveName"
                android:text="User"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvProviderDate"
                android:layout_marginTop="4dp"
                android:text="Date"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvProviderTime"
                android:layout_marginTop="8dp"
                android:text="Time"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />

        <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Approve"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            android:id="@+id/btnApprove"
            android:enabled="true" />

        <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Decline"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            android:id="@+id/btnDecline"
            android:enabled="true" />

        <!--<Button
            style="Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_button"
            android:text="Edit" />-->

        <!--<Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_delete"
            android:text="Delete" />-->



    </LinearLayout>

</androidx.cardview.widget.CardView>
